<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounter.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="24dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:fontFamily="sans-serif-medium"
                android:textColor="#616161"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="56sp"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp"/>
            <Button
                android:id="@+id/add3_team_a_button"
                android:text="+3 points"
                android:onClick="addThreePointsA"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/add2_team_a_button"
                android:text="+2 points"
                android:onClick="addTwoPointsA"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/add1_team_a_button"
                android:text="free throw"
                android:onClick="freeThrowA"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp">
            <TextView
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:fontFamily="sans-serif-medium"
                android:textColor="#616161"
                android:layout_gravity="center"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="24dp"
                android:textColor="#000000"
                android:textSize="56sp"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/add3_team_b_button"
                android:text="+3 points"
                android:onClick="addThreePointsB"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/add2_team_b_button"
                android:text="+2 points"
                android:onClick="addTwoPointsB"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/add1_team_b_button"
                android:text="free throw"
                android:onClick="freeThrowB"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        >

        <Button
            android:id="@+id/reset_button"
            android:text="reset"
            android:onClick="resetScores"
            android:background="@android:color/holo_orange_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
</LinearLayout>
